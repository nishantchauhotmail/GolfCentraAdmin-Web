                                    <option value="2">18 Holes</option>


                                </select>
                            </div>

                        </div>
                        <div class="col-sm-6 col-xs-6" id="divBucketType">
                            <div class="form-group">
                                <label for="Holes">Bucket </label>
                                <select class="form-control custom-select" id="ddlBucketType"></select>
