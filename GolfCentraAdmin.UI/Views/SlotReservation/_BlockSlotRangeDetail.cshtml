
@model List<GolfCentraAdmin.ViewModel.BlockSlotRangeViewModel>
@if (Model != null && Model.Count != 0)
{
    <div class="table-responsive" style="overflow-x:auto; width:100%; height:350px">
        <table class="table" style="width:80%">
            <thead>
                <tr>
                    <th width="250px">Start Date</th>
                    <th width="200px">End Date</th>
                    <th width="200px">Reason</th>
                    <th width="200px">Course</th>
                    <th width="200px">Customer Available</th>
                    <th width="200px">Booking Available</th>
                    <th>Slot Details</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="javascript:void(0)">@item.StartDate.ToShortDateString()</a></td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>@item.SlotBlockReason</td>
                        <td>@item.CoursePairingName</td>
                        <td>@item.IsCustomerAvailable</td>
                        <td>@item.IsBookingavailable</td>
                        <td>

                            <a href="" data-toggle="modal" data-target="#eq@(item.BlockSlotRangeId)"><div class="label label-table label-success">Slot Details</div></a>
                            <div class="modal fade " tabindex="-1" id="eq@(item.BlockSlotRangeId)" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content popup_adj">
                                        <div class="modal-header" style="padding-bottom:35px">
                                            <h4 class="modal-title" id="myLargeModalLabel">Slot Information</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">

                                                <div class="col-md-12">
                                                    <div class="card card-body">
                                                        <div class="table-responsive" style="overflow-x:auto; width:100%; height:350px">
                                                            @if (item.BlockSlotViewModels != null)
                                                            {
                                                                if (item.BlockSlotViewModels.Count() != 0)
                                                                {
                                                                    <table class="table" style="width:80%">
                                                                        <thead>
                                                                            <tr>
                                                                                <th width="200px">Slot Time</th>

                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @foreach (var item1 in item.BlockSlotViewModels)
                                                                            {
                                                                                <tr>
                                                                                    <td>@item1.SlotTime</td>

                                                                                </tr>
                                                                            }

                                                                        </tbody>
                                                                    </table>
                                                                }
                                                                else
                                                                {
                                                                    <div> No Record Exist</div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div> No Record Exist</div>
                                                            }
                                                        </div>


                                                    </div>
                                                </div>

                                            </div>

                                        </div>

                                    </div>
                                    <!-- /.modal-content -->
                                </div>

                            </div>


                        </td>
                        <td>
                            <a href="" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="DeleteBlockSlotRangePopUp(@item.BlockSlotRangeId)"><div class="label label-table label-success">Delete</div></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div> No Record Found.</div>

}
