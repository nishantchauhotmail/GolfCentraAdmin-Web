
@model GolfCentraAdmin.ViewModel.SessionDetailViewModel
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Staff Log Reporting</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->
@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnStaffReportBegin", OnSuccess = "OnStaffReportSuccess", Url = @GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrl + "StaffLogReport/ActivityReport" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body">

                <form class="form-horizontal">

                    <div class="form-group row input-daterange" id="date-range">
                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Start Date</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.StartDate, new { @id = "txtStartDate", @autocomplete = "off", @class = "form-control", @placeholder = "Start Date" })

                        </div>

                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">End Date</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.EndDate, new { @id = "txtEndDate", @autocomplete = "off", @class = "form-control", @placeholder = "End Date" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Employee Id</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.EmployeeId, new { @id = "txtEmployeeId", @autocomplete = "off", @class = "form-control", @placeholder = "Employee Id" })
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="offset-sm-6 col-sm-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light m-t-10" id="btnSubmit">Search</button>
                            <div id="divMessage"></div>
                            <div id="divLoader" style="display:none">
                                <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
<div class="row" id="divReportTable">
    <!-- Column -->
    <!-- Column -->

</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;" id="divBookingPopUp"></div>
<!-- ============================================================== -->
<!-- End Projects of the Month -->
<!-- ============================================================== -->

@section scripts{
    <script src="~/Scripts/Custom/StaffLogReportController.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            // OnCouponDetailsReady();
            $('#date-range').datepicker({
                toggleActive: true,
                autoclose: true,
              
            }).datepicker("setDate", "0");
            $('#txtStartDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,
                setDate: new Date()
               
            }).datepicker("setDate", "0");
            $('#txtEndDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,
                setDate: new Date()

            }).datepicker("setDate", "0");

            $('.input-daterange-datepicker').daterangepicker({
                buttonClasses: ['btn', 'btn-sm'],
                applyClass: 'btn-danger',
                cancelClass: 'btn-inverse'
            });
        });
    </script>

}

