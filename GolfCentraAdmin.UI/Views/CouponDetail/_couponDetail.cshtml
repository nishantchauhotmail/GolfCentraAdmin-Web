
@model List<GolfCentraAdmin.ViewModel.CouponViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Coupon Details</h4>

            <div class="table-responsive m-t-40">
                <table id="myTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Coupon Code</th>
                            <th>Amount/Percentage</th>
                            <th>Coupon Type</th>

                            <th>Edit</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Code</td>
                                <td>@item.Amount</td>
                                @if (item.CouponTypeId == 1)
                                {
                                    <td>Flat</td> }
                                else
                                {
                                    <td>Percentage</td>
                                }

                                <td>

                                    <a href="" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="DeletePopUp('@item.CouponId')"><div class="label label-table label-success">Deactive</div></a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>