

@model GolfCentraAdmin.ViewModel.GolferViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.css" rel="stylesheet" /> <!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Update Golfer</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->
@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnGolferUpdateBegin", OnSuccess = "OngolferUpdateSuccess", Url = @GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrl + "UpdateGolfer/UpdateGolferType" }))
{
  @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.GolferId)
    // @Html.HiddenFor(x => x.Password)
    <div class="row">
        <!-- Column -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <div class="form-body">
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Salutation </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.DropDownList("SalutationId", new SelectList(Model.SalutationViewModels, "SalutationId", "Text"), "Please Select A Salutation", new { @class = "custom-select", @id = "ddlSalutation", @autocomplete = "off" })
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">First Name <span style="color:red">*</span></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Name, new { @id = "txtFirstName", @class = "form-control", @placeholder = "FirstName" })
                                </div>
                            </div>
                        </div>

                        <div class="row p-t-20">

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Last Name</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.LastName, new { @id = "txtLastName", @class = "form-control", @placeholder = "LastName" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">DOB </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.DOB, new { @id = "txtDate", @class = "form-control", @placeholder = "DOB" })
                                </div>
                            </div>
                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Age</label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Age, new { @id = "txtAge", @class = "form-control", @placeholder = "Age" })

                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Gender</label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.DropDownList("GenderTypeId", new SelectList(Model.GenderTypeViewModels, "GenderTypeId", "Value"), "Please Select A Gender Type", new { @class = "custom-select", @id = "ddlGender", @autocomplete = "off" })

                                </div>
                            </div>

                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Member Cat  </label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.DropDownList("MemberTypeId", new SelectList(Model.MemberTypeViewModels, "MemberTypeId", "Name"), "Please Select A Member Cat", new { @class = "custom-select", @id = "ddlMemberCat", @autocomplete = "off" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Membership Id <span style="color:red">*</span></label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.ClubMemberId, new { @id = "txtMemberShipId", @class = "form-control", @placeholder = "MemberShipId" })

                                </div>
                            </div>

                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Mobile No <span style="color:red">*</span></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Mobile, new { @id = "txtMobileNo", @class = "form-control", @placeholder = "MobileNo" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Home Phone</label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.PhoneCode, new { @id = "txtHomePhone", @class = "form-control", @placeholder = "HomePhone" })

                                </div>
                            </div>
                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Member Since</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.MemberSince, new { @id = "txtMemberSince", @class = "form-control", @placeholder = "MemberSince" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Occupation</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Occpoution, new { @id = "txtOccupation", @class = "form-control", @placeholder = "Occupation" })

                                </div>
                            </div>
                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Marital Status</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.DropDownList("MaritalStatusId", new SelectList(Model.MaritalStatusViewModels, "MaritalStatusId", "Value"), "Please Select marital status", new { @class = "custom-select", @id = "ddlMaritalStatus", @autocomplete = "off" })

                                </div>
                            </div>




                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">SpouseName</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.SpouseName, new { @id = "txtSpouseName", @class = "form-control", @placeholder = "SpouseName" })

                                </div>
                            </div>
                        </div>
                        <div class="row p-t-20">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Special Comments</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.SpecialComments, new { @id = "txtSpecialComments", @class = "form-control", @placeholder = "SpecialComments" })

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Email <span style="color:red">*</span></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.EmailAddress, new { @id = "txtEmail", @class = "form-control", @placeholder = "Email" })

                                </div>
                            </div>




                        </div>

                        <div class="col-md-2">
                            <div class="form-group">

                                <button type="submit" class="btn btn-info"> <i class="fa fa-check"></i>  Submit</button>
                                <div id="divMessage"></div>
                                <div id="divLoader" style="display:none">
                                    <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                                </div>
                            </div>
                        </div>

                        <span id="divAddGolferTable"></span>

                    </div>
                </div>
                <!-- Column -->

            </div>
        </div>
    </div>
}


<!-- ============================================================== -->
<!-- End Projects of the Month -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;" id="divGolferPopUp"></div>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.full.js"></script>
    <script src="~/Scripts/Custom/UpdateGolferController.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select a Tax",


            });
            jQuery('#txtDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,

            });
            OnUpdateGolferReady();
        });
    </script>
}


