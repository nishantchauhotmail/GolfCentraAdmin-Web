@model GolfCentraAdmin.ViewModel.PricingViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.css" rel="stylesheet" />
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Add Special Price Multiple</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-md-12">
        <div class="card card-body">
            <div id="hdnPricingId" style="display:none "></div>
            <form class="form-horizontal" id="firstPage">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 text-right control-label col-form-label">Booking Type<span style="color:red">*</span></label>
                    <div class="col-sm-9">
                        @Html.DropDownList("BookingTypeId", new SelectList(Model.BookingTypeViewModels, "BookingTypeId", "Name"), "Please Select A Booking Type", new { @class = "custom-select", @id = "ddlBookingType", @autocomplete = "off" })
                    </div>
                </div>
                @*<div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 text-right control-label col-form-label">Day Type</label>
                        <div class="col-sm-9">
                            @Html.DropDownList("DayTypeId", new SelectList(Model.DayTypeViewModels, "DayTypeId", "Name"), "Please Select A Day Type", new { @class = "custom-select", @id = "ddlDayType", @autocomplete = "off" })
                        </div>
                    </div>*@
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 text-right control-label col-form-label">Member Type<span style="color:red">*</span></label>
                    <div class="col-sm-9">
                        @Html.DropDownList("MemberTypeArray", new SelectList(Model.MemberTypeViewModels, "MemberTypeId", "Name"),  new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlMemberType", @autocomplete = "off" })
                    </div>
                </div>
                <div class="form-group row" id="divHoleType">
                    <label for="inputEmail3" class="col-sm-3 text-right control-label col-form-label">Hole Type<span style="color:red">*</span></label>
                    <div class="col-sm-9">
                        @Html.DropDownList("HoleTypeArray", new SelectList(Model.HoleTypeViewModels, "HoleTypeId", "Name"),  new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlHoleType", @autocomplete = "off" })
                    </div>
                </div>
                <div class="form-group row input-daterange" id="date-range">
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Start Time<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.StartDate, new { @id = "txtStartDate", @autocomplete = "off", @class = "form-control", @placeholder = "Start Date" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">End Time<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.EndDate, new { @id = "txtEndDate", @autocomplete = "off", @class = "form-control", @placeholder = "End Date" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 text-right control-label col-form-label">Slot Time</label>
                    <div class="col-sm-9">
                        @Html.DropDownList("SlotArray", new SelectList(Model.SlotViewModels, "SlotId", "Time"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlSlotTime", @autocomplete = "off" })
                    </div>
                </div>

                <button type="button" class="btn btn-success waves-effect waves-light m-r-10" id="btnNext" onclick="OnNextButtonClick()">Next</button>
                <div id="divMessage"></div>
                <div id="divLoader" style="display:none">
                    <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                </div>
            </form>

            <form class="form-horizontal" id="pricingBTT">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Green Fee</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.GreenFee, new { @id = "txtGreenFee", @autocomplete = "off", @class = "form-control", @placeholder = "Green Fee", onkeypress = "return isDecimal(this,event)" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Taxes</label>
                    <div class="col-sm-4">
                        @Html.DropDownList("Taxs", new SelectList(Model.TaxManagementViewModels, "TaxId", "Name"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlGreenFeeTax", @autocomplete = "off" })
                    </div>


                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Add On Caddie</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.AddOnCaddie, new { @id = "txtAddonCaddie", @autocomplete = "off", @class = "form-control", @placeholder = "Add On Caddie", onkeypress = "return isDecimal(this,event)" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Taxes</label>
                    <div class="col-sm-4">
                        @Html.DropDownList("Taxs", new SelectList(Model.TaxManagementViewModels, "TaxId", "Name"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlAddOnCaddieTax", @autocomplete = "off" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Add On Cart</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.AddOnCart, new { @id = "txtAddOnCart", @autocomplete = "off", @class = "form-control", @placeholder = "Add On Cart", onkeypress = "return isDecimal(this,event)" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Taxes</label>
                    <div class="col-sm-4">
                        @Html.DropDownList("Taxs", new SelectList(Model.TaxManagementViewModels, "TaxId", "Name"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlAddOnCartTax", @autocomplete = "off" })
                    </div>
                </div>
                <button type="button" class="btn btn-success waves-effect waves-light m-r-10" onclick="OnSaveButtonClick()">Update</button>

            </form>
            <form class="form-horizontal" id="pricingBDR">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Range Fee</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.RangeFee, new { @id = "txtRangeFee", @autocomplete = "off", @class = "form-control", @placeholder = "Range Fee", onkeypress = "return isDecimal(this,event)" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Taxes</label>
                    <div class="col-sm-4">
                        @Html.DropDownList("Taxs", new SelectList(Model.TaxManagementViewModels, "TaxId", "Name"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlRangeFeeTax", @autocomplete = "off" })
                    </div>
                </div>
                <button type="button" class="btn btn-success waves-effect waves-light m-r-10" onclick="OnSaveButtonClick()">Update</button>
                <button type="button" class="btn btn-success waves-effect waves-light m-r-10" onClick="window.location.reload();">Back</button>


            </form>
            <div id="divMessage1"></div>
            <div id="divLoader1" style="display:none">
                <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
            </div>
        </div>
    </div>
</div>

<!-- ============================================================== -->
<!-- End Projects of the Month -->
<!-- ============================================================== -->
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.full.js"></script>
    <script src="~/Scripts/Custom/AddSpecialPricingMultipleController.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.select2').select2({
               // placeholder: "Select a Tax",


            });
            OnStandardPricingReady();
            jQuery('#date-range').datepicker({
                toggleActive: true,
                autoclose: true,
                startDate: new Date(),

            });
            jQuery('#txtStartDate').datepicker({
                toggleActive: true,
                autoclose: true,

            }).datepicker("setDate", "0");
            jQuery('#txtEndDate').datepicker({
                toggleActive: true,
                autoclose: true,

            }).datepicker("setDate", "0");
            $('.input-daterange-datepicker').daterangepicker({
                buttonClasses: ['btn', 'btn-sm'],
                applyClass: 'btn-danger',
                cancelClass: 'btn-inverse'
            });
        });
    </script>
}
