@model GolfCentraAdmin.ViewModel.SessionMasterViewModel
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Edit Session</h3>

    </div>


</div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/clockpicker/0.0.7/bootstrap-clockpicker.css" rel="stylesheet" />

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->

<div class="row">
    <!-- Column -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                @using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnSessionDetailAddBegin", OnSuccess = "OnSessionDetailAddSuccess", Url = @GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrl + "SessionDetail/SaveSessionDetail" }))
                {<form>
                @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="row p-t-20">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.SessionName, new { @id = "txtSessionName", @autocomplete = "off", @class = "form-control", @placeholder = "Name" })


                                    </div>
                                </div>
                                <div class="col-md-3 ">
                                    <div class="form-group ">
                                        @Html.TextBoxFor(x => x.StartTime, new { @id = "txtStartTime", @autocomplete = "off", @class = "form-control ", @placeholder = "Start Time" })

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group ">
                                        @Html.TextBoxFor(x => x.EndTime, new { @id = "txtStartEndTime", @autocomplete = "off", @class = "form-control ", @placeholder = "End Time" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">

                                        @Html.DropDownListFor(x => x.BookingTypeId, new[]{
                            new SelectListItem(){ Text = "BTT", Value = "1"},
                            new SelectListItem(){ Text = "BDR", Value = "2"},
                           }, new { @id = "txtStartEndTime", @autocomplete = "off", @class = "form-control", @placeholder = "End Time" })

                                       
                                    </div>
                                </div>
                            </div>

                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        @*<input type="text" id="Session" class="form-control" placeholder="Edit Session ">*@
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <button type="submit" class="btn btn-info" id="btnSubmit"> <i class="fa fa-check"></i>  Submit</button>
                                        <div id="divMessage"></div>
                                        <div id="divLoader" style="display:none">
                                            <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </form>
                }

                <div class="table-responsive" id="divSearch">

                </div>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>
<!-- ============================================================== -->
<!-- End Projects of the Month -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;" id="divSessionPopUp"></div>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clockpicker/0.0.7/bootstrap-clockpicker.js"></script>

    <script src="~/Scripts/Custom/SessionDetailController.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            OnSessionDetailReady();
           
            $('#txtStartTime').clockpicker({
                placement: 'bottom',
                align: 'left',
                autoclose: true,
                'default': 'now'
            });
            $('#txtStartEndTime').clockpicker({
                placement: 'bottom',
                align: 'left',
                autoclose: true,
                'default': 'now'
            });
        });
    </script>
}
