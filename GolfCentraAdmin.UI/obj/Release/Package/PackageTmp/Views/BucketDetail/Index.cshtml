
@model GolfCentraAdmin.ViewModel.BucketViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.css" rel="stylesheet" /> <!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Bucket</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->
<div class="row">
    <!-- Column -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="form-body">

                    <div class="row p-t-20">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">BallCount</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="text" id="txtCount" class="form-control" placeholder="Count" onkeypress="return isNumber(event)">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Price</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="text" id="txtPrice" class="form-control" placeholder="Price" onkeypress = "return isDecimal(this,event)">
                            </div>
                        </div>
                    </div>
                    <div class="row p-t-20">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="CouponCode" class="control-label col-form-label" style="font-weight:600">Taxes</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.DropDownList("Taxs", new SelectList(Model.TaxManagementViewModels, "TaxId", "Name"), new { @class = "custom-select select2", @multiple = "multiple", @id = "ddlTax", @autocomplete = "off" })
                            </div>
                        </div>



                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="inputEmail3" class=" control-label col-form-label">Day Type</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.DropDownList("DayTypeId", new SelectList(Model.DayTypeViewModels, "DayTypeId", "Name"), "Please Select A Day Type", new { @class = "custom-select", @id = "ddlDayType", @autocomplete = "off" })
                            </div>
                        </div>
                    </div>
                    <div class="row p-t-20">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="inputEmail3" class=" control-label col-form-label">Member Type</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.DropDownList("MemberTypeId", new SelectList(Model.MemberTypeViewModels, "MemberTypeId", "Name"), "Please Select A Member Type", new { @class = "custom-select", @id = "ddlMemberType", @autocomplete = "off" })
                            </div>
                        </div>

                       
                    </div>
                    <div class="row p-t-20">
                        <div class="col-md-2">
                            <div class="form-group">

                                <button type="button" class="btn btn-info" onclick="SaveBucketType()"> <i class="fa fa-check"></i>  Submit</button>
                                <div id="divMessage"></div>
                                <div id="divLoader" style="display:none">
                                    <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                <span id="divBucketDetailTable"></span>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>
<!-- ============================================================== -->
<!-- End Projects of the Month -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;" id="divBucketPopUp"></div>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.full.js"></script>
    <script src="~/Scripts/Custom/BucketDetailController.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select a Tax",


            });
            OnBucketDetailsReady();
        });
    </script>
}

