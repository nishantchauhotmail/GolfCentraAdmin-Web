@model GolfCentraAdmin.ViewModel.ReportingViewModel
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Money Reporting</h3>
    </div>
</div>

<!-- ============================================================== -->
<!-- Projects of the Month -->
<!-- ============================================================== -->
@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnBookingReportBegin", OnSuccess = "OnBookingReportSuccess", Url = @GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrl + "DetailReporting/MoneyReport" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body">

                <form class="form-horizontal">
@Html.AntiForgeryToken()

                    <div class="form-group row input-daterange" id="date-range">
                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Start Date</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.StartDate, new { @id = "txtStartDate", @autocomplete = "off", @class = "form-control", @placeholder = "Start Date" })

                        </div>

                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">End Date</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.EndDate, new { @id = "txtEndDate", @autocomplete = "off", @class = "form-control", @placeholder = "End Date" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Membership Number</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.MembershipId, new { @id = "txtMembershipId", @autocomplete = "off", @class = "form-control", @placeholder = "Membership Number" })

                        </div>

                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Member Type</label>
                        <div class="col-sm-4">
                            @Html.DropDownList("MemberTypeId", new SelectList(Model.MemberTypeViewModels, "MemberTypeId", "Name"), "Please Select A Member Type", new { @class = "form-control custom-select", @id = "ddlMemberType", @autocomplete = "off" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Package</label>
                        <div class="col-sm-4">
                            @Html.DropDownList("PackageId", new SelectList(Model.PromotionViewModels, "PromotionsId", "Name"), "Please Select A Package Type", new { @class = "form-control custom-select", @id = "ddlCouponType", @autocomplete = "off" })

                        </div>

                        <label for="inputEmail3" class="col-sm-2 text-right control-label col-form-label">Booking Status</label>
                        <div class="col-sm-4">
                            @Html.DropDownList("BookingStatusId", new SelectList(Model.BookingStatusViewModels, "BookingStatusId", "Name"), "Please Select A Booking Status", new { @class = "form-control custom-select", @id = "ddlCouponType", @autocomplete = "off" })

                        </div>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="offset-sm-6 col-sm-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light m-t-10" id="btnSubmit">Search</button>
                            <div id="divMessage"></div>
                            <div id="divLoader" style="display:none">
                                <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
<div class="row" id="divReportTable">
    <!-- Column -->
    <!-- Column -->

</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;" id="divBookingPopUp"></div>
<!-- ============================================================== -->
<!-- End Projects of the Month -->
<!-- ============================================================== -->

@section scripts{
    <script src="~/Scripts/Custom/DetailReportingController.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
           // OnCouponDetailsReady();
            jQuery('#date-range').datepicker({
                toggleActive: true,
                autoclose: true,
               
            });
            jQuery('#txtStartDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,
               
            }).datepicker("setDate", "0");
            jQuery('#txtEndDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,
              
            }).datepicker("setDate", "0");

            $('.input-daterange-datepicker').daterangepicker({
                buttonClasses: ['btn', 'btn-sm'],
                applyClass: 'btn-danger',
                cancelClass: 'btn-inverse'
            });
        });
    </script>
}
