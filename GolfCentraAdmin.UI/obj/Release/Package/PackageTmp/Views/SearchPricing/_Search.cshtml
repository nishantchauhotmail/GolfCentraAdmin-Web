
@model List<GolfCentraAdmin.ViewModel.PricingViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                @*  Member*@
            </h4>

            <div class="table-responsive m-t-40">
                <table id="myTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Booking Type</th>
                            <th>Member Type</th>
                            <th>Day Type</th>
                            <th>Hole Type</th>
                            <th>Green Fee	</th>
                            <th>RangeFee</th>
                            <th>Add On Caddie	</th>
                            <th>Add On Cart</th>
                            <th>Time Type</th>
                            <th>Slot Id</th>
                            <th>Taxes</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>@item.BookingTypeName</td>
                            <td>@item.MemberTypeName</td>
                            <td>@item.DayTypeName</td>
                            <td>@item.HoleTypeName</td>
                            <td>@item.GreenFee</td>
                            <td>@item.RangeFee</td>
                            <td>@item.AddOnCaddie</td>
                            <td>@item.AddOnCart</td>
                            <td>@item.TimeFormatName</td>
                            <td>@item.SlotTime</td>
                            <td>
                                <a href="" data-toggle="modal" data-target="#eq@(item.PricingId)"><div class="label label-table label-success">Tax Details</div></a>
                                <div class="modal fade " tabindex="-1" id="eq@(item.PricingId)" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content popup_adj">
                                            <div class="modal-header" style="padding-bottom:35px">
                                                <h4 class="modal-title" id="myLargeModalLabel">Tax Information</h4>
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" >×</button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">

                                                    <div class="col-md-12">
                                                        <div class="card card-body">
                                                            <div class="table-responsive" style="overflow-x:auto; width:100%; height:350px">
                                                                @if (item.PricingTaxMappingViewModels != null)
                                                                {
                                                                    if (item.PricingTaxMappingViewModels.Count() != 0)
                                                                    {
                                                                        <table class="table" style="width:80%">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th width="200px">Tax Name</th>
                                                                                    <th width="200px">Tax Percentage</th>

                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @foreach (var item1 in item.PricingTaxMappingViewModels)
                                                                                {
                                                                                    <tr>
                                                                                        <td>@item1.TaxName</td>
                                                                                        <td>@item1.Percentage</td>

                                                                                    </tr>
                                                                                }

                                                                            </tbody>
                                                                        </table>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div> No Record Exist</div>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <div> No Record Exist</div>
                                                                }
                                                            </div>


                                                        </div>
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                        <!-- /.modal-content -->
                                    </div>

                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel'
            ]
        });
    });
</script>