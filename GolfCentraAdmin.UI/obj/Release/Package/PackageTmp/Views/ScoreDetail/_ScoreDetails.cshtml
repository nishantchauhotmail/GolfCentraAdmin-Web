@model List<GolfCentraAdmin.ViewModel.ScoreDetailsViewModel>
<!-- Column -->
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Score Details</h4>

            <div class="table-responsive m-t-40">
                <table id="myTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Score ID</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Score Details</th>

                            <th>Date</th>

                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model)
                        {
                            <tr>
                                <td>@item.ScoreId</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>
                                    @foreach (var score in item.ScoreViewModels)
                                    {
                                        <span>
                                            hole - @score.HoleNumber | par - @score.Par | strokes - @score.Storkes | putts - @score.Putts | drive - @score.Drive | sand - @score.Sand | Hole Name - @score.HoleName
                                        </span>
                                        <br />
                                    }

                                </td>

                                <td>@item.SubmittedDate.ToShortDateString()</td>

                                <td>@item.Time.Hours.ToString() : @item.Time.Minutes.ToString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Column -->

<script type="text/javascript">
        $(document).ready(function () {

            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel'
                ]
            });
        });
</script>
