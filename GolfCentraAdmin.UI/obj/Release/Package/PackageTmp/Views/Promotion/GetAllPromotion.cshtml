@model List<GolfCentraAdmin.ViewModel.PromotionViewModel>
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Promotions</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- User Edits -->
<!-- ============================================================== -->
<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body" id="divSearchPricing">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                @*  Member*@
                            </h4>

                            <div class="table-responsive m-t-40">
                                <table id="myTable" class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Hole</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th> Start Time</th>
                                            <th> End Time</th>
                                            <th>Green Fee Include</th>
                                            <th>Caddie Fee Include</th>
                                            <th>Cart Fee Include</th>
                                            <th>Equipment's Fee Include</th>
                                            <th>Remark</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.HoleTypeName</td>
                                            <td>@item.StartDate.ToShortDateString()</td>
                                            <td>@item.EndDate.ToShortDateString()</td>
                                            @if (item.StartTime == new TimeSpan())
                                            {
                                                <td>All Day</td> }
                                            else
                                            {
                                                <td>@item.StartTime</td>}
                                            @if (item.EndTime == new TimeSpan())
                                            {
                                                <td>All Day</td>}
                                            else
                                            {
                                                <td>@item.EndTime</td>}
                                            <td>@item.GreenFee</td>
                                            <td>@item.CartFee</td>
                                            <td>@item.CaddieFee</td>
                                            @if (item.EquipmentName != null && item.EquipmentName != "")
                                            {
                                                <td>@item.EquipmentName</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }
                                            @if (item.Extra != null && item.Extra != "")
                                            {
                                                <td>@item.Extra</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }

                                            <td>
                                                <a href="" data-toggle="modal" data-target="#eq@(item.PromotionsId)"><div class="label label-table label-success">Delete</div></a>
                                                <div class="modal fade " tabindex="-1" id="eq@(item.PromotionsId)" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content popup_adj">
                                                            <div class="modal-header" style="padding-bottom:35px">
                                                                <h4 class="modal-title" id="myLargeModalLabel"> Information</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="row">
                                                                    <div class="col-sm-12 col-xs-12">
                                                                        <form>

                                                                            <button type="button" class="btn btn-success waves-effect waves-light m-r-10" id="btnSubmitPopUp@(item.PromotionsId)" onclick="DeletePromotions(@item.PromotionsId)">Delete</button>
                                                                            <div id="divMessagePopUp@(item.PromotionsId)"></div>
                                                                            <div id="divLoaderPopUp@(item.PromotionsId)" style="display:none">
                                                                                <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>

                                                            </div>

                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>


<!-- ============================================================== -->
<!-- User Edits ends -->
<script>
    function DeletePromotions(value) {

        var url = GetDomain(_DOMAINDIVID) + "Promotion/DeletePromotion?id=" + value;

        $.ajax({
            method: "POST",
            url: url,
            success: function (data) {

                data = eval(data);

                switch (data.code) {
                    case 0:
                        SetHtml("divMessagePopUp" + value, "Promotion Has Been Deleted, Successfully. Page Will Be Refreshed In 5 Seconds.");
                        setTimeout(function () {
                            window.location = GetDomain(_DOMAINDIVID) + "Promotion/GetAllPromotion";
                        }, 5000);
                        break;
                    case -1:
                        SetHtml("divMessagePopUp" + value, data.message);
                        Enablebutton("btnSubmitPopUp" + value);
                        break;
                    case -2:
                        SetHtml("divMessagePopUp" + value, "SomeThing Goes Wrong");
                        Enablebutton("btnSubmitPopUp" + value);
                        break;
                    case -99:
                        LogoutOperation();
                        break;
                }
            },
            error: function () {
                $('#divMessagePopUp' + value).html('<p>An Error Has Occurred</p>');
            }
        });
    }

</script>
