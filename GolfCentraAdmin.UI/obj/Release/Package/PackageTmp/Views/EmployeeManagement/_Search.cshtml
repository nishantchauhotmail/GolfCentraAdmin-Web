@model List<GolfCentraAdmin.ViewModel.EmployeeViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Recent Joining</h4>

            <div class="table-responsive m-t-40">
                <table id="myTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Role</th>
                            <th>Edit</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.EmailId</td>
                            <td>@item.Mobile</td>
                            <td>@item.GenderType</td>
                            <td>@item.IsActive</td>
                            <td>@item.EmployeeType</td>
                            <td>
                                <a href="" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="EditUserPopUp('@item.EmployeeId')"><div class="label label-table label-success"  >Edit</div></a>
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <a href="" data-toggle="modal" data-target=".bs-example-modal-lg" onclick="UpdateUserStatusPopUP('@item.EmployeeId', 'false')"><div class="label label-table label-success" >Deactive</div></a>

                                }
                                else
                                { <a href=""  data-toggle="modal" data-target=".bs-example-modal-lg" onclick="UpdateUserStatusPopUP('@item.EmployeeId', 'true')"><div class="label label-table label-success" >Active</div></a>
                                }
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>