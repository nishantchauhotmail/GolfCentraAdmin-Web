@model List<GolfCentraAdmin.ViewModel.PaymentGatewayControlViewModel>
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Payment Gateway Contorl</h3>

    </div>


</div>

<!-- ============================================================== -->
<!-- User Edits -->
<!-- ============================================================== -->
<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body" id="divSearchPricing">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                @*  Member*@
                            </h4>

                            <div class="table-responsive m-t-40">
                                <table id="myTable" class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Payment Gateway Enable</th>
                                            <th>Green Fee Disable</th>
                                            <th>Caddie Fee Disable</th>
                                            <th>Cart Fee Disable</th>
                                            <th>Equipment's Fee Disable</th>
                                            <th>All Member</th>
                                            <th>Selected Golfer</th>
                                           <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.PaymentGatewayEnable</td>
                                            <td>@item.GreenFee</td>
                                            <td>@item.CaddieFee</td>
                                            <td>@item.CartFee</td>
                                            @if (item.EquipmentName != null && item.EquipmentName != "")
                                            {
                                                <td>item.EquipmentName</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }
                                            <td>@item.AllMembers</td>
                                            @if (item.GolferNames != null && item.GolferNames != "")
                                            {
                                            <td>@item.GolferNames</td>
                                            }
                                            else
                                            {
                                                <td>N/A</td>
                                            }
                                           
                                            <td>
                                                <a href="" data-toggle="modal" data-target="#eq@(item.PaymentGatewayControlId)"><div class="label label-table label-success">Delete</div></a>
                                                <div class="modal fade " tabindex="-1" id="eq@(item.PaymentGatewayControlId)" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content popup_adj">
                                                            <div class="modal-header" style="padding-bottom:35px">
                                                                <h4 class="modal-title" id="myLargeModalLabel"> Information</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="row">
                                                                    <div class="col-sm-12 col-xs-12">
                                                                        <form>

                                                                            <button type="button" class="btn btn-success waves-effect waves-light m-r-10" id="btnSubmitPopUp@(item.PaymentGatewayControlId)" onclick="DeletePaymentGatewayControl(@item.PaymentGatewayControlId)">Delete</button>
                                                                            <div id="divMessagePopUp@(item.PaymentGatewayControlId)"></div>
                                                                            <div id="divLoaderPopUp@(item.PaymentGatewayControlId)" style="display:none">
                                                                                <img src="@GolfCentraAdmin.UI.Common.Constants.Url.WebSiteUrlWithoutSlash/Theme/images/loader.svg" />
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>

                                                            </div>

                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>


<!-- ============================================================== -->
<!-- User Edits ends -->
<script>
    function DeletePaymentGatewayControl(value) {

        var url = GetDomain(_DOMAINDIVID) + "PaymentGatewayControl/DeletePaymentGatewayControl?id=" + value;

        $.ajax({
            method: "POST",
            url: url,
            success: function (data) {

                data = eval(data);

                switch (data.code) {
                    case 0:
                        SetHtml("divMessagePopUp" + value, "Payment Gateway Control Deleted Successfully. We Refresh Page in Few Seconds");
                        setTimeout(function () {
                            window.location = GetDomain(_DOMAINDIVID) + "PaymentGatewayControl/GetAllPaymentGatewayControl";
                        }, 5000);
                        break;
                    case -1:
                        SetHtml("divMessagePopUp" + value, data.message);
                        Enablebutton("btnSubmitPopUp" + value);
                        break;
                    case -2:
                        SetHtml("divMessagePopUp" + value, "SomeThing Goes Wrong");
                        Enablebutton("btnSubmitPopUp" + value);
                        break;
                    case -99:
                    LogoutOperation();
                    break;
                }
            },
            error: function () {
                $('#divMessagePopUp' + value).html('<p>An Error Has Occurred</p>');
            }
        });
    }

</script>